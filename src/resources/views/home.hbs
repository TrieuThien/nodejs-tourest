<script>
    let currentSlide = 0;

    function changeSlide(direction) {
        const slides = document.querySelectorAll('.slide');
        slides[currentSlide].classList.remove('active');
        currentSlide = (currentSlide + direction + slides.length) % slides.length;
        slides[currentSlide].classList.add('active');
    }

    document.addEventListener('DOMContentLoaded', function () {
        const sliderContainer = document.querySelector('.left-slider-container');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    sliderContainer.classList.add('visible'); // Thêm lớp visible khi vào viewport
                    observer.unobserve(sliderContainer); // Ngừng theo dõi sau khi đã thêm lớp
                }
            });
        });

        observer.observe(sliderContainer); // Bắt đầu theo dõi phần tử
    });

</script>